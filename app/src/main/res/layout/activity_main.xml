<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/main_layout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        tools:context=".MainActivity">
    <TextView
            android:text=""
            android:layout_width="401dp"
            android:layout_height="wrap_content" android:id="@+id/enter"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:padding="8dp"
            android:inputType="none"
            android:textIsSelectable="true"
            android:height="40dp"
            android:maxHeight="40dp"
            android:background="@drawable/edittextstyle"
            android:layout_marginTop="10dp" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"/>
    <TextView
            android:text=""
            android:layout_width="401dp"
            android:layout_below="@id/enter"
            android:layout_height="wrap_content" android:id="@+id/result"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:padding="8dp"
            android:inputType="none"
            android:textIsSelectable="true"
            android:height="40dp"
            android:maxHeight="40dp"
            android:background="@drawable/edittextstyle"
            android:layout_marginTop="10dp" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp" android:layout_marginRight="2dp"/>

    <ViewFlipper
            android:id="@+id/flipper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/result"

            android:layout_marginTop="18dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp">

    </ViewFlipper>


</RelativeLayout>